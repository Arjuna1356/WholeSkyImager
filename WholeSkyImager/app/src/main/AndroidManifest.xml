<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.ntu.wholeskyimager">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera2.full" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="sg.edu.ntu.wholeskyimager.DisplayAboutActivity">
        </activity>
        <activity
            android:name="sg.edu.ntu.wholeskyimager.DisplaySettingsActivity"
            android:label="@string/title_activity_display_settings">
        </activity>
        <activity
            android:name="sg.edu.ntu.wholeskyimager.SettingsActivity"
            android:label="@string/title_activity_settings">
        </activity>
    </application>
</manifest>